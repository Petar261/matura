        private void button5_Click(object sender, EventArgs e)
 59 
 
        {
 60 
 
            Graphics g = pictureBox1.CreateGraphics();
 61 
 
            int a = pictureBox1.Width;
 62 
 
            Pen c = new Pen(Color.Red, 2);
 63 
 
